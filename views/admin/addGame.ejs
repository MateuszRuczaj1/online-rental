<% layout('layouts/boilerplate') %>
    <h1>Dodaj grę</h1>
    <div class="row">
        <div class="col-6">
            <form class="validated-form" action="/addGame" method="post" novalidate>
                <label for="title" class="form-label">Tytuł gry</label>
                <input type="text" class="form-control" name="title" id="title" required>
                <label for="releaseDate" class="form-lable">Rok wydania</label>
                <input type="text" class="form-control" name="releaseYear" id="releaseYear" required>
                <label for="platforms" class="form-label">Platformy</label>
                <select id="platforms" name="platforms" size='9' class="form-select" multiple>
                    <option value="PC">PC</option>
                    <option value="PS3">PS3</option>
                    <option value="PS4">PS4</option>
                    <option value="PS5">PS5</option>
                    <option value="XBOX360">XBOX360</option>
                    <option value="XBOX SERIES X/S">XBOX SERIES X/S</option>
                    <option value="MAC OS">MAC OS</option>
                    <option value="SWITCH">SWITCH</option>
                    <option value="XBOX ONE">XBOX ONE</option>
                </select>
                <label for="genre" class="form-label">Gatunek</label>
                <input type="text" class="form-control" id="genre" name="genre" required>
                <label for="rating" class="form-label">Ocena</label>
                <input type="number" class="form-range" min="1" max="10" id="rating" name="rating">
                <label for="description" class="form-label">Opis</label>
                <textarea name="description" id="description" cols="30" rows="10" class="form-control"></textarea>
                <label for="price" class="form-label">Cena</label>
                <input type="number" step="0.01" class="form-control" name="price">
                <label for="imgs" class="form-label">Obraz URL</label>
                <div class="mb-3">
                    <input type="text" id="imgs" name="imgs[]">
                    <input type="text" id="imgs" name="imgs[]">
                    <input type="text" id="imgs" name="imgs[]">
                </div>
                <button class="btn btn-success">Dodaj grę</button>
            </form>
        </div>
    </div>