<% layout('layouts/boilerplate') %>

    <body>
        <h1 style="text-align: center;">Internetowa wypożyczalnia gier wideo i filmów</h1>
        <div class="d-flex justify-content-center my-5">
            <h2>Najpopularniejsze tytuły</h2>
        </div>
        <div class="row">
            <div class="col-6">
                <% for(movie of movies){ %>
                    <div class="img-container">
                        <a href="/movies/<%=movie._id %>">

                            <img src="<%=movie.imgs[0]%>" class="img-thumbnail my-2" alt="...">




                            <div class="text-container hide">

                                <% const title=movie.title.toUpperCase() %>
                                    <span class="title">
                                        <%=title %>
                                    </span>
                                    <p class="description">
                                        <%=movie.description %>
                                    </p>

                            </div>
                    </div>
                    </a>
                    <% } %>
            </div>
            <div class="col-6">
                <% for(game of games){ %>
                    <div class="img-container">
                        <a href="/games/<%=game._id %>">
                            <img src="<%=game.imgs[0]%>" class="img-thumbnail my-2" alt="...">

                            <div class="text-container hide">

                                <% const title=game.title.toUpperCase() %>
                                    <span class="title">
                                        <%=title %>
                                    </span>

                                    <p class="description">
                                        <%=game.description %>
                                    </p>


                            </div>

                    </div>
                    </a>
                    <% } %>
            </div>

        </div>
    </body>
    <style>
        .hide {
            display: none;
        }

        .img-container {
            position: relative;

        }

        .img-container:hover {
            opacity: 0.65;
            transition: opacity 0.75s ease-out;
        }

        .img-container:hover .hide {
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;

        }

        .text-container {

            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            font-size: 1.3vmax;
            color: rgb(255, 255, 255);
            font-weight: 900;
            font-style: italic;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            text-shadow: 3px 3px #000;


        }

        .title {
            width: 100%;
            text-align: center;
        }

        .description {
            font-size: 0.7vmax;
            text-align: center;
            max-height: 80%;
            margin: 0 10%
        }
    </style>